[user]
    name = Geoff Adams
[core]
    eol = lf
    autocrlf = input
    editor = vim
    pager = less -r
    excludesfile = ~/.gitignore-global
[credential]
    helper = osxkeychain
[colors]
    ui = auto
[apply]
    whitespace = fix
[push]
    default = current
[pull]
	rebase = true
[branch]
    autosetuprebase = always
[alias]
    st = status -sb

    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

    changes = diff --name-status
    unmerged-branches = branch --no-merged master
    unpushed-branches = branch --no-merged origin/master

    who-committed = shortlog -s --
    who-is = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    what-is = show -s --pretty='tformat:%h (%s, %ad)' --date=short

    create-branch-tracking-master = "!sh -c 'git checkout -b $1 && git branch --set-upstream-to=origin/master $1' -"
    checkout-existing-branch = "!sh -c 'git checkout $1 && git branch --set-upstream-to=origin/master $1' -"
    delete-branch = "!sh -c 'git branch -d $1 && git remote prune origin' -"
    track-branch = "!sh -c 'git branch --set-upstream-to=origin/$1' -"

    search-log = log -S

    branches = branch -a
    tags = tag
    stashes = stash list

    unstage = reset -q HEAD --
    discard = checkout --
    uncommit = reset --mixed HEAD~
    amend = commit --amend

    scrap-it = !git reset --hard HEAD && git clean -d -f

    precommit = diff --cached --diff-algorithm=minimal -w

    tidy-branches = remote prune origin
[tag]
    sort = version:refname
[commit]
    gpgsign = true
[include]
    path = ~/.gitconfig-local
    path = ~/.gitconfig-private
[init]
	defaultBranch = main
